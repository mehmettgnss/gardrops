              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["sessions", "{{sessionId}}", "images"]
            }
          }
        },
        {
          "name": "List Images in Session",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/sessions/{{sessionId}}/images",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["sessions", "{{sessionId}}", "images"]
            }
          }
        },
        {
